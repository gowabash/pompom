#!/usr/bin/env ruby
require File.expand_path(File.dirname(__FILE__) + "/../lib/pompom.rb")

total = 1500


include FFI::NCurses

def display(screen, str)
  screen.clear
  screen.addstr(str)
  screen.refresh
end

screen = Pompom::NCursesScreen.new
screen.run do
  until total == 0
    sleep(1)
    total -= 1
    display screen, Artii::Base.new.asciify(format_time(total))
  end
end
